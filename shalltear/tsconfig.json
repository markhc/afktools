{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "es5",
      "es6",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}